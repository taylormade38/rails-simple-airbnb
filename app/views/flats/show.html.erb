<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1504968430878-8b4dc34be661?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
    <div class="container">

    </div>
  </div>

  <div class="container full-container">
    <div class="content-container">
      <div class="left-container">
        <div class="card">
          <div class="card-body">
           <h1><%= @flat.name %></h1>
           <%= @flat.address %>
         </div>
       </div>

       <div class="card">
        <div class="card-body">
          <h3>A bit more about this flat...</h3>
          <p><%= @flat.description %></p>
        </div>
      </div>
    </div>

    <div class="right-container">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Book This Place!</h5>
          <p class="card-text">
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">From:</span>
              </div>
              <input type="text" class="form-control" placeholder="20/05/01" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">To:</span>
              </div>
              <input type="text" class="form-control" placeholder="20/05/15" aria-label="Username" aria-describedby="basic-addon1">
            </div>
          </p>
          <a href="#" class="btn btn-success btn-block">Book</a>
        </div>
      </div>

      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Details</h5>
          <p class="card-text"> <i class="fas fa-user-friends"></i>    <%= @flat.number_of_guests %>  <i class="fas fa-dollar-sign"></i>   <%= @flat.price_per_night %>
          </div>
        </div>

        <div class="card" style="width: 18rem;">
          <div class="card-body share">
            <h5 class="card-title">Share</h5>
            <p class="card-text"><i class="fab fa-facebook-square"></i> <i class="fab fa-twitter-square"></i> <i class="fab fa-pinterest-square"></i> <i class="fas fa-envelope"></i>
            </div>
          </div>

          <%= link_to "Edit Flat", edit_flat_path(@flat), class: "btn btn-outline-secondary btn-block" %>


        </div>
      </div>

    </div>
  </div>
